  gem 'guard-rspec'           #自动化测试
  gem 'spring-commands-rspec' #自动化测试
end

group :development do
  gem 'quiet_assets'
end

group :test do
  gem 'faker'                   #为预构件生成名字, Email地址以及其他的示例数据
  gem 'database_cleaner'        #为预构件生成名字, Email地址以及其他的示例数据
